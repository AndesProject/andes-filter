{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
